@media mq-mobile
  #mobile-nav
    position: absolute
    top: 0
    left: 0
    width: mobile-nav-width
    height: 100%
    background: var(--body-background-color)
    box-shadow: 1px 2px 3px var(--text-light-color)
    border-right: 1px solid var(--text-light-color)
    opacity : 0.8

@media mq-mobile
  .mobile-nav-link
    display: block
    color: color-grey
    text-decoration: none
    padding: 1rem
    font-weight: bold
    &:visited
      color: var(--text-color)
    &:hover
      color: var(--text-light-color)
