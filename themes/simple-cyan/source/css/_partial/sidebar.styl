if sidebar is bottom
  @import "sidebar-bottom"
else
  @import "sidebar-aside"

.widget
  word-wrap: break-word
  ul, ol
    list-style: none
    margin: 0
    ul, ol
      margin: 0 20px
    ul
      list-style: disc
    ol
      list-style: decimal

.category-list-count
.tag-list-count
.archive-list-count
  padding-left: 0.25rem
  color: var(--text-light-color)
  &:before
    content: "("
  &:after
    content: ")"

.tagcloud
  a
    margin-right: 0.25rem
    display: inline-block
