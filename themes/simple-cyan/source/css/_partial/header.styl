#header
  height: banner-height
  position: relative
  border-bottom: 1px solid color-border
  &:before, &:after
    content: ""
    position: absolute
    left: 0
    right: 0
    height: 40px

#header-outer
  height: 100%
  position: relative

#header-inner
  position: relative
  overflow: hidden

#banner
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%
  background: url(banner-url) center var(--body-background-color)
  background-size: cover
  z-index: -1

#header-title
  text-align: center
  padding: 1rem
  background-color: rgba(#222, 0.8)
  height: logo-size
  position: absolute
  top: 50%
  left: 0
  margin-top: logo-size * -0.5

$logo-text
  text-decoration: none
  color: #fff
  font-weight: 300
  text-shadow: 0 1px 4px rgba(0, 0, 0, 0.3)

#logo
  @extend $logo-text
  font-size: logo-size
  line-height: logo-size
  letter-spacing: 0.02rem

#subtitle
  @extend $logo-text
  font-size: subtitle-size
  line-height: subtitle-size
  letter-spacing: 0.02rem

#subtitle-wrap
  margin-top: subtitle-size

#main-nav
  float: left
  margin-left: -15px

$nav-link
  float: left
  color: var(--text-color)
  text-decoration: none
  transition: opacity 0.2s
  display: block
  padding: 1rem
  &:hover
    opacity: 0.6
  &:visited
    color: var(--text-color)

.nav-icon
  @extend $nav-link
  text-align: center
  padding: 1rem
  position: relative
  cursor: pointer

.main-nav-link
  @extend $nav-link
  letter-spacing: 0.02rem
  @media mq-mobile
    display: none

#main-nav-toggle
  display: none
  @media mq-mobile
    display: block

#sub-nav
  float: right
  margin-right: -15px

#search-form-wrap
  position: absolute
  top: 15px
  width: 150px
  height: 30px
  right: -150px
  opacity: 0
  transition: 0.2s ease-out
  &.on
    opacity: 1
    right: 0
  @media mq-mobile
    width: 100%
    right: -100%

.search-form
  position: absolute
  top: 0
  left: 0
  right: 0
  background: var(--body-background-color)
  padding: 5px 15px
  border-radius: 15px
  -webkit-box-shadow: 1px 2px 5px var(--text-light-color)
  box-shadow: 1px 2px 5px var(--text-light-color)

.search-form-input
  border: none
  background: none
  color: var(--text-light-color)
  width: 100%
  outline: none
  &::-webkit-search-results-decoration
  &::-webkit-search-cancel-button
    -webkit-appearance: none

.search-form-submit
  position: absolute
  top: 50%
  right: 10px
  margin-top: -7px
  font: 0.8rem font-icon
  border: none
  background: none
  color: var(--text-light-color)
  cursor: pointer
  &:hover, &:focus
    color: var(--text-color)