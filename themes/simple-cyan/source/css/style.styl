@import "nib"
@import "_variables"
@import "_util/mixin"
@import "_util/grid"

global-reset()

input, button
  margin: 0
  padding: 0
  &::-moz-focus-inner
    border: 0
    padding: 0

html, body, #container
  height: 100%
  font-family: font-family-base
  color: var(--text-color)
  background-color: var(--body-background-color)
  Std-16N-7()
  -webkit-text-size-adjust: 100%

a
  color: var(--link-color)
  &:hover
    text-decoration-style: double
  &:active
    color: var(--link-active-color)
  &:visited
    color: var(--link-visited-color)

h1,h2,h3,h4,h5,h6
  a
    color: var(--text-color)
    text-decoration: none
    &:hover
      text-decoration-style: double
    &:active
      color: var(--link-active-color)

.outer
  clearfix()
  padding-left: 10px;
  padding-right: 10px;
  width: 90%;
  @media mq-normal
    width: 80%
    margin: auto

.inner
  column(columns)

.left, .alignleft
  float: left

.right, .alignright
  float: right

.clear
  clear: both

#container
  position: relative

.mobile-nav-on
  overflow: hidden

#wrap
  height: 100%
  width: 100%
  position: absolute
  top: 0
  left: 0
  transition: 0.2s ease-out
  z-index: 1
  background-color: var(--body-background-color)
  .mobile-nav-on &
    left: mobile-nav-width

:root
  --body-background-color: #eeeeee;
  // text color
  --text-color: text-color
  --text-light-color: text-light
  // keyword
  --keyword-line-color: keyword-line-color
  // key color
  --primary-color: primary-color
  --secondary-color: secondary-color
  --tertiary-color: tertiary-color
  --background-color: background-color
  // link
  --link-color: link-color
  --link-visited-color: link-visited
  --link-active-color: link-active
  // code block
  --pre-block-bg-color: pre-block-bg
  --pre-block-text-color: pre-block-text
  --code-bg-color: code-bg
  --code-text-color: code-text
  // blockquote
  --blockquote-border-color: blockquote-border
  // table
  --table-border-color: table-border

  @media (prefers-color-scheme: dark)
    --body-background-color: background-dark
    // text color
    --text-color: text-dark
    --text-light-color: text-light-dark
    // keyword
    --keyword-line-color: keyword-line-color
    // key color
    --primary-color: primary-color-dark
    --secondary-color: secondary-color-dark
    --tertiary-color: tertiary-color-dark
    --background-color: background-color-dark
    // link
    --link-color: link-dark
    --link-visited-color: link-visited-dark
    --link-active-color: link-active
    // code block
    --pre-block-bg-color: pre-block-bg-dark
    --pre-block-text-color: pre-block-text-dark
    --code-bg-color: code-bg-dark
    --code-text-color: code-text-dark
    // blockquote
    --blockquote-border-color: blockquote-border-dark
    // table
    --table-border-color: table-border-dark

if sidebar and sidebar isnt bottom
  #main
    @media mq-normal
      column(main-column)

if sidebar is left
  @media mq-normal
    #main
      float: right

@import "_extend"
@import "_partial/header"
@import "_partial/article"
@import "_partial/comment"
@import "_partial/archive"
@import "_partial/footer"
@import "_partial/highlight"
@import "_partial/mobile"

if sidebar
  @import "_partial/sidebar"


